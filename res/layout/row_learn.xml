<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="108dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <Button
            android:id="@+id/btSoundL"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/speaker_louder_32" />

    <CheckBox
        android:id="@+id/btCb"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/tvWordS"/>

    <TextView
        android:id="@+id/tvWordL"
        android:layout_width="165dp"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btSoundL"
        android:layout_toRightOf="@+id/btCb"
        android:text="TextView" />
 <TextView
        android:id="@+id/tvTypeL"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/btSoundL"
        android:layout_toLeftOf="@+id/btSoundL"
        android:layout_toRightOf="@+id/tvWordL"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="16sp"
        android:textColor="#FF0000"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/tvVDL"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/tvSoundL"
        android:textColor="#00004E"
        android:textSize="16sp"
        android:text="TextView" />

   

    <TextView
        android:id="@+id/tvSoundL"
        android:layout_width="fill_parent"
        android:layout_height="28dp"
        android:layout_below="@+id/tvWordL"
        android:layout_toLeftOf="@+id/tvTypeL"
        android:layout_toRightOf="@+id/btCb"
        android:text="TextViewg"
        android:textColor="#00C800"
        android:textSize="17sp"
        android:gravity="center"
        android:textStyle="italic" />

</RelativeLayout>